{
    "manifest_version": 3,
    "name": "Readable - Custom Font Injection",
    "version": "1.0.0",
    "description": "특정 웹사이트에 선호 폰트와 타이포그래피 스타일을 적용합니다.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "src/popup/index.html",
        "default_icon": {
            "16": "icons/icon16.svg",
            "48": "icons/icon48.svg",
            "128": "icons/icon128.svg"
        }
    },
    "options_page": "src/options/index.html",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/injector.ts"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "icons": {
        "16": "icons/icon16.svg",
        "48": "icons/icon48.svg",
        "128": "icons/icon128.svg"
    }
}